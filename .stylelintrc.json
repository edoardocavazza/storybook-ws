{
  "extends": "stylelint-config-standard",
  "plugins": [
		"stylelint-order",
    "stylelint-value-no-unknown-custom-properties"
	],
  "rules": {
    "string-quotes": "single",
    "order/order": [
			"custom-properties",
			"declarations"
		],
    "order/properties-order": [
			"width",
			"max-width",
			"min-width"
		],
    "csstools/value-no-unknown-custom-properties": [true, {
      "importFrom": [
        "./src/variables.css"
      ]
    }]
  }
}
